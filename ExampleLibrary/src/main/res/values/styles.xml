    </style>

    <!--Teams and Contest-->
    <style name="TeamsAndContestBannerCornerRadius" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/dimen_20dp</item>
